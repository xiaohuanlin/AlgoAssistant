# AlgoAssistant Frontend Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# API CONFIGURATION
# ================================

# Backend API URL
REACT_APP_API_URL=http://localhost:8000

# Environment setting
REACT_APP_ENVIRONMENT=production

# ================================
# OAUTH INTEGRATIONS
# ================================

# Google OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# GitHub OAuth Configuration
REACT_APP_GITHUB_CLIENT_ID=your-github-client-id

# ================================
# BUILD CONFIGURATION
# ================================

# Generate source maps (true for development, false for production)
GENERATE_SOURCEMAP=true

# Inline runtime chunk
INLINE_RUNTIME_CHUNK=true

# Image inline size limit (bytes)
IMAGE_INLINE_SIZE_LIMIT=10000

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Enable file watching polling (useful for Docker/WSL)
CHOKIDAR_USEPOLLING=false

# Enable development tools
REACT_APP_ENABLE_DEV_TOOLS=true

# Enable analytics
REACT_APP_ENABLE_ANALYTICS=false

# ================================
# PERFORMANCE SETTINGS
# ================================

# Node.js memory limit (for large projects)
# NODE_OPTIONS=--max-old-space-size=4096

# ================================
# NOTES
# ================================

# 1. Never commit this file with real secrets to version control
# 2. Use environment-specific .env files (.env.dev, .env.prod)
# 3. For production builds, set GENERATE_SOURCEMAP=false
# 4. All REACT_APP_ variables are embedded in the build
